<?php
require_once("util-db.php");

$pageTitle = "Matches by Competition";
include "view-header.php";

// Check if 'competition' parameter is set in the URL
if(isset($_GET['competition'])) {
    $competitionName = $_GET['competition'];
    $matchesData = getMatchesByCompetition($competitionName);
    include "view-matches-by-competition.php";
} else {
    echo "Competition not provided.";
}

include "view-footer.php";
?>
